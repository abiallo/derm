<%= div_for patient do %>
  <h3>
  	<%= 'Patient Name: '%>
    <%= link_to patient.long_name, patient %>
    <span class='actions'>
      <%= link_to "Edit", edit_patient_path(patient) %>
      <%= link_to "Delete", patient, :confirm => "Are you sure?",
:method => :delete %>
    </span>
  </h3>
  <p>
    <b><%= 'File Number: ' %> </b>  
      <%= @patient.id %> 
 </p>
  <p>  
    <b><%= 'Date of birth: ' %> </b>  
      <%= @patient.date_of_birth %> </p>
    <p>
    <b><%= 'Mobile number: ' %></b>
    <%= @patient.mobile_number %>
 </p><p></p>

<% end %>